@{
    Book newbook = new Book();
    newbook.IsFinished = true;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Books" asp-action="Write" enctype="multipart/form-data" method="post"
                style="color: black;">
                <div class="form-group">
                    <label asp-for="@newbook.Name">Title: </label>
                    <input type="text" asp-for="@newbook.Name" class="form-control" required>
                </div>
                <div class="form-group">
                    <label asp-for="@newbook.Image">Image: </label>
                    <input type="file" accept="image/*" name="imageFile" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="@newbook.Author">Author: </label>
                    <input asp-for=@newbook.Author type="text" class="form-control" value=@User.Identity.Name readonly>
                </div>
                <div class="form-group">
                    <label asp-for="@newbook.Description">Description: </label>
                    <input type="text" asp-for="@newbook.Description" class="form-control">
                </div>
                <div class="form-group" id="textAreaGroup">
                    <label asp-for="@newbook.Content">Content:</label>
                    <textarea asp-for="@newbook.Content" class="form-control" rows="40"></textarea>
                </div>
                <br>
                <div class="form-group">
                    <label asp-for="@newbook.tag">Tag: </label>
                    <select id="category" asp-for="@newbook.tag">
                        <option value="adventure">Adventure</option>
                        <option value="horror">Horror</option>
                        <option value="mystery">Mystery</option>
                        <option value="romance">Romance</option>
                        <option value="poetry">Poetry</option>
                        <option value="science">Science</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Status:</label><br>
                    <label><input type="radio" asp-for="@newbook.IsFinished" value="true" required> Finished</label>
                    <label><input type="radio" asp-for="@newbook.IsFinished" value="false" required> Ongoing</label>
                </div>

                <input type="hidden" id="ContentFile" name="ContentFile" value="">
                <br>
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>
    </div>
</div>
