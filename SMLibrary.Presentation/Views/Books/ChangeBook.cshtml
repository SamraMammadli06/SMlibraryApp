@model Book

<style>
    .form-group label {
        color: orange;
    }

    .btn-primary {
        background-color: orange;
        border-color: orange;
    }

    .btn-primary:hover {
        background-color: darkorange;
        border-color: darkorange;
    }
</style>

<div class="container">
    <form asp-controller="Books" asp-action="ChangeBook" enctype="multipart/form-data" method="post" style="color: black;">
        <div class="row justify-content-center">
            <!-- First Column -->
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Name">Title: </label>
                    <input type="text" asp-for="@Model.Name" value="@Model.Name" class="form-control" readonly>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Image">Image: </label>
                    <input type="file" accept="image/*" name="imageFile" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Author">Author: </label>
                    <input asp-for="@Model.Author" type="text" class="form-control" value="@User.Identity.Name"
                        readonly>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Description">Description: </label>
                    <input type="text" asp-for="@Model.Description" class="form-control">
                </div>
                <br>
                <div class="form-group">
                    <label asp-for="@Model.tag">Tag: </label>
                    <select id="category" asp-for="@Model.tag" class="form-control">
                        <option value="adventure">Adventure</option>
                        <option value="horror">Horror</option>
                        <option value="mystery">Mystery</option>
                        <option value="romance">Romance</option>
                        <option value="poetry">Poetry</option>
                        <option value="science">Science</option>
                        <option value="science">Fiction</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Status:</label><br>
                    <label><input type="radio" asp-for="@Model.IsFinished" value="true" required> Finished</label>
                    <label><input type="radio" asp-for="@Model.IsFinished" value="false" required> Ongoing</label>
                </div>
                <button type="submit" class="btn btn-primary">Publish</button>
            </div>

            <div class="col-md-6">
                 <div class="form-group" id="textAreaGroup">
                    <label>Content:</label>
                    @{
                        if (!File.Exists(Model.Content))
                        {
                            throw new FileNotFoundException("File not found.", Model.Content);
                        }

                        string content = File.ReadAllText(Model.Content);
                        <textarea name="content" rows="40" class="form-control">@content</textarea>
                    }
                </div>
                <input type="hidden"  asp-for="@Model.Content" />
            </div>
        </div>
    </form>
</div>

