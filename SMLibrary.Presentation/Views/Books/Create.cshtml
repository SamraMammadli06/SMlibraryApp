@{
    Book newbook = new Book();
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Books" asp-action="Create" enctype="multipart/form-data" method="post"
                style="color: black;">
                <div class="form-group">
                    <label asp-for="@newbook.Name">Name: </label>
                    <input type="text" asp-for="@newbook.Name" class="form-control" required>
                </div>
                <div class="form-group">
                    <label asp-for="@newbook.Image">Image: </label>
                    <input type="file" accept="image/*" name="imageFile" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="@newbook.Author">Author: </label>
                    <input type="text" asp-for="@newbook.Author" class="form-control" required>
                </div>
                <div class="form-group">
                    <label asp-for="@newbook.Description">Description: </label>
                    <input type="text" asp-for="@newbook.Description" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="@newbook.Content">Content: </label>
                    <input type="file" accept="application/pdf" id="Content" name="ContentFile" class="form-control">
                </div>
                <br>
                <div class="form-group">
                    <label asp-for="@newbook.tag">Tag: </label>
                    <select id="category"asp-for="@newbook.tag">
                        <option value="adventure">Adventure</option>
                        <option value="horror">Horror</option>
                        <option value="mystery">Mystery</option>
                        <option value="romance">Romance</option>
                        <option value="poetry">Poetry</option>
                        <option value="science">Science</option>
                    </select>
                </div>
                <input type="hidden" id="ContentFileName" name="ContentFileName" value="">
                <br>
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>
    </div>
</div>
