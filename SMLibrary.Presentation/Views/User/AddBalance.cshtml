@{
    ViewData["Title"] = "AddBalance";
    SMLibrary.Presentation.Dtos.CardDto card = new SMLibrary.Presentation.Dtos.CardDto();
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="User" method="post" asp-action="AddBalance" enctype="multipart/form-data" method="post"
                style="color: white;">
                <div class="form-group">
                    <label asp-for="@card.CardNumber">Card: </label>
                    <input asp-for="@card.CardNumber type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="@card.CVV" >CVV: </label>
                    <input asp-for="@card.CVV" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="@card.Date">Date: </label>
                    <input asp-for="@card.Date" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="@card.Amount">Amount: </label>
                    <input asp-for="@card.Amount" type="number" class="form-control">
                </div>
                <div class="field btn">
                    <div class="btn-layer"></div>
                    <input type="submit" value="Increase">
                </div>
            </form>
        </div>
    </div>
</div>
