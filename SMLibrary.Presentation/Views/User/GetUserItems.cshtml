@model IEnumerable<Book>
@{
  ViewData["Title"] = "GetUserItems";
}
@if (Model is not null && Model.Count() != 0)
{

  @foreach (var item in @Model)
  {

    string truncatedDescription = string.Empty;

    if (!string.IsNullOrWhiteSpace(item.Description))
    {
      string[] words = item.Description.Split(' ');
      if (words.Length <= 20)
      {
        truncatedDescription = string.Join(" ", words);
      }
      else
      {
        truncatedDescription = string.Join(" ", words.Take(20)) + " ...";
      }
    }

    <div class="card mb-3" style="max-width: 400px;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="@Url.Content(item.Image)" class="img-fluid rounded-start" alt="BookCover">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"> @item.Name</h5>
            <p class="card-text">Author: @item.Author</p>
            <p class="card-text" style="color: gray;">@truncatedDescription</p>
            <p class="card-text" style="color: blue;">Tag: #@item.tag</p>
            <a href="@Url.Action("ReadBook", "Books", new { id = item.Id })" class="btn btn-secondary">Read</a>
          </div>
        </div>
      </div>
    </div>
  }
}

else{
  <h1 style="color: orange; text-align:center; margin: 50px;">No books added to Favorites</h1>
}
</div>