@{
   string UserName = string.Empty;
   string Password = string.Empty;
}
<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title></title>
   <style>
      body,
      html {
         margin: 0;
         padding: 0;
         height: 100%;
      }

      .orange-left {
         height: 100vh;
         width: 60%;
         background-color: #ff6122;
         float: left;
         transition: transform 0.5s ease-in-out;
      }

      .white-half {
         height: 100%;
         width: 40%;
         background-color: #fff;
         float: left;
      }

      .content {
         text-align: center;
         padding-top: 20%;
         color: white;
      }

      h1 {
         font-size: 3em;
      }

      p {
         font-size: 1.2em;
      }
   </style>
</head>

<body>
   <div class="orange-left">
      <div class="content">
         <h1>Welcome</h1>
         <p>Enter your personal details and start journey with us.</p>
         <a class="btn orange-btn" href="@Url.Action("Register", "Identity")">Sing Up</a>
      </div>
   </div>
   <div class="white-half">
      <div class="content">
         <div class="login-card">
            <div class="login-header">
               <h2>Welcome Back!</h2>
               <p>Please login to continue.</p>
            </div>
            <form method="post" asp-action="Login" class="login-form">
               <div class="form-group">
                  <input asp-for="@UserName" type="text" placeholder="Username" required>
               </div>
               <div class="form-group">
                  <input asp-for="@Password" type="password" placeholder="Password" required>
               </div>
               <div class="form-group btn-container">
                  <input type="submit" value="Login" class="login-btn">
               </div>
               <div class="form-links">
                  <a href="@Url.Action("ChangePassword", "Identity")">Forgot Password?</a>
               </div>
            </form>
         </div>
      </div>
   </div>
   <script>
      document.addEventListener("DOMContentLoaded", function () {
         const orangeLeft = document.querySelector('.orange-left');

         if (orangeLeft) {
               orangeLeft.style.transform = "translateX(0)";
         }

      });
   </script>
</body>

</html>



<style>
   .login-card {
      max-width: 600px;
      max-height: 700px;
      margin: 0;
      margin-left: auto;
      padding: 20px;
      border-radius: 8px;
      background-color: #fff;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
   }

   .orange-btn {
      background-color: #ff6122;
      color: white;
      border-radius: 25px;
      border-color: white;
      padding: 8px 50px;
      border-radius: 4px;
      cursor: pointer;
      text-decoration: none;
   }

   .orange-btn:hover {
      background-color: darkorange;
      color: white;
   }

   .login-header {
      color: black;
   }

   .login-header h2 {
      margin-bottom: 10px;
   }

   .login-form .form-group {
      margin-bottom: 20px;
   }

   .login-form input[type="text"],
   .login-form input[type="password"] {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
   }

   .login-form .btn-container {
      position: relative;
   }

   .login-form .login-btn {
      width: 100%;
      padding: 10px;
      background-color: #ff6122;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
   }

   .login-form .login-btn:hover {
      background-color: darkorange;
   }

   .form-links a {
      color: #ff6122;
      text-decoration: none;
   }

   .form-links span {
      margin: 0 5px;
   }
</style>