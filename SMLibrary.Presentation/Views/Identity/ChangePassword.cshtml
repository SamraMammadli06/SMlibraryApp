@{
    string UserName = string.Empty;
    string oldPassword = string.Empty;
    string newPassword = string.Empty;
}

<body>
    <div class="login-card">
        <div class="login-header">
            <h2>Change Password</h2>
        </div>
        <form method="post" asp-action="ChangePassword" class="login-form">
            <div asp-validation-summary="All" class="text-danger"></div> 
            <div class="form-group">
                <input asp-for=@UserName type="text" value=@User.Identity.Name readonly>
            </div>
            <div class="form-group">
                <input asp-for="@oldPassword" type="password" placeholder="Old Password" required>
                <span asp-validation-for="@oldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="@newPassword" type="password" placeholder="New Password" required>
                <span asp-validation-for="@newPassword" class="text-danger"></span>
            </div>
            <div class="form-group btn-container">
                <input type="submit" value="Change" class="login-btn">
            </div>
            <div class="form-links">
                <a href="@Url.Action("Account", "User")">Return to Account</a>
            </div>
        </form>
    </div>
</body>

</html>

<style>
    .login-card {
        max-width: 400px;
        margin: 0;
        padding: 20px;
        border-radius: 8px;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .login-header h2 {
        margin-bottom: 10px;
    }

    .login-form .form-group {
        margin-bottom: 20px;
    }

    .login-form input[type="text"],
    .login-form input[type="password"],
    .login-form input[type="email"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .login-form .btn-container {
        position: relative;
    }

    .login-form .login-btn {
        width: 100%;
        padding: 10px;
        background-color: #ff6122;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .login-form .login-btn:hover {
        background-color: darkorange;
    }

    .form-links a {
        color: #ff6122;
        text-decoration: none;
    }

    .form-links span {
        margin: 0 5px;
    }
</style>
